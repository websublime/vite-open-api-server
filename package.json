{
  "name": "@websublime/vite-open-api-server-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Monorepo for vite-open-api-server plugin and playground",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm -r --parallel --filter='./packages/*' run dev",
    "build": "pnpm -r --filter='./packages/*' run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "pnpm -r --filter='./packages/*' exec tsc --noEmit",
    "playground": "pnpm --filter petstore-app dev",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "changeset": "workspace changeset create",
    "release": "workspace bump --execute --git-tag --git-push"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "packageManager": "pnpm@9.15.0",
  "keywords": [
    "vite",
    "plugin",
    "openapi",
    "mock-server",
    "monorepo"
  ],
  "author": "Websublime",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.0",
    "vitest": "^4.0.16"
  }
}
